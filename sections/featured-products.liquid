<section id="products" class="featured-products">
  {% assign cart_logo = settings.header.settings.cart %}
  <div class="product-list">
    {% for product in products %}
      {% if forloop.index <= 4 %}
        {% render 'product-card', product: product, cart_logo: cart_logo %}
      {% else %}
        {% render 'product-card', product: product, cart_logo: cart_logo, class: 'hidden' group: forloop.index %}
      {%endif %}
    {% endfor %}
    </div>
    {% if products.size > 4 %}
      <div class="featured-products-container-button">
        <button class="featured-products-button">
          VIEW ALL
        </button>
      </div>
      <div class="scroll-observer"></div>
    {% endif %}
</section>
